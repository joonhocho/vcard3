{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
